#!/bin/bash
# draw system in gnuplot, generated by PartArray::save("file.dat") function of PartsEngine framework.
# plots by command "sysplot file.dat"
# author uyras
# enjoy!

POW=${2:-"1"}
gnuplot -e "plot '$1' every ::4 using 1:2:(\$7*$POW):(\$8*$POW) with ellipses lc 0 notitle,'' using (\$1-(\$4*$POW)):(\$2-(\$5*$POW)):(\$4*$POW*2):(\$5*$POW*2) with vectors lw 2 lc 0 notitle, '' using 1:2 with points lw 5 lc 1 notitle" -p
